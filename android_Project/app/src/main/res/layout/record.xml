<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/record"
              android:visibility="visible"
              android:orientation="vertical">
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/id_layout">
    <TextView android:layout_weight="2" android:layout_height="33dp" android:text="id : "
              android:layout_width="match_parent"
              android:textSize="@dimen/column_size" android:id="@+id/id"/>
    <TextView android:layout_weight="1" android:layout_height="33dp" android:layout_width="match_parent"
              android:textSize="@dimen/column_size" android:id="@+id/id_edit"/>
</LinearLayout>

<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_centerInParent="true" android:id="@+id/serial_layout">
    <TextView android:layout_width="match_parent" android:layout_height="33dp" android:text="serial : "
              android:layout_weight="2"
              android:textSize="@dimen/column_size" android:id="@+id/serial"/>
    <TextView android:layout_width="match_parent" android:layout_height="33dp" android:layout_weight="1"
              android:textSize="@dimen/column_size" android:id="@+id/serial_edit"/>
</LinearLayout>

<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_alignParentBottom="true" android:id="@+id/name_layout">
    <TextView android:layout_width="match_parent" android:layout_height="33dp" android:text="name : "
              android:layout_weight="2"
              android:textSize="@dimen/column_size" android:id="@+id/name"/>
    <TextView android:layout_width="match_parent" android:layout_height="33dp" android:layout_weight="1"
              android:textSize="@dimen/column_size" android:id="@+id/name_edit"/>
</LinearLayout>

    <View
        android:layout_width="wrap_content" android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#000000" android:visibility="visible" android:id="@+id/line"/>
</LinearLayout>